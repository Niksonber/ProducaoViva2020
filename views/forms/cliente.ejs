<!DOCTYPE html>
<html>
  <head>
    <title>Formul√°rio</title>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/sidebar_top %>
      <h3>Cadastrar clientes da <i>Faceshield</i></h3>
      <form method="POST">
        <input class="form-control mb-3" type="text" name="nome" placeholder="Nome" required></input>
        <input class="form-control mb-3" type="number" name="demanda" placeholder="Demanda" required></input>
        <input class="form-control mb-3" type="text" name="email" placeholder="E-mail"></input>
        <input class="form-control mb-3" type="text" name="nomeRepresentante" placeholder="Nome do representante"></input>
        <input class="form-control mb-3" type="text" name="telefone" placeholder="Telefone"></input>
        <button class="btn btn-success mb-3" type="submit">Cadastrar</button>
      </form>
      <br/>
      <h3>Clientes cadastrados</h3>
      <div class="table-responsive-md">
        <table class="table">
          <thead>
            <tr>
              <th>Id</th>
              <th>Nome</th>
              <th>Demanda</th>
              <th>E-mail</th>
              <th>Representante</th>
              <th>Telefone</th>
            </tr>
          </thead>
          <tbody>
            <% clientes.forEach(u => { %>
            <tr>
              <td><%= u.id %></td>
              <td><input class="pretendText" type="text" table-id="<%= u.id %>" name="nome" value="<%= u.nome %>"></input></td>
              <td><input class="pretendText" type="text" table-id="<%= u.id %>" name="demanda" value="<%= u.demanda %>"></input></td>
              <td><input class="pretendText" type="text" table-id="<%= u.id %>" name="email" value="<%= u.email %>"></input></td>
              <td><input class="pretendText" type="text" table-id="<%= u.id %>" name="nomeRepresentante" value="<%= u.nomeRepresentante %>"></input></td>
              <td><input class="pretendText" type="text" table-id="<%= u.id %>" name="telefone" value="<%= u.telefone %>"></input></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% include ../partials/sidebar_bottom %>
  </body>
  <% include ../partials/bottom %>
</html>