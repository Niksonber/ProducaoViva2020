<!DOCTYPE html>
<html>
  <head>
    <title>Formul√°rio</title>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/sidebar_top %>
      <h3>Cadastrar clientes da <i>Faceshield</i></h3>
      <form method="POST">
        <div class="form-group row">
          <div class="col-sm-10">
          <input type="text" step="1" name='nome' min="1" class="form-control col" placeholder="Nome" required>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-10">
          <input type="number" step="1" name='demanda' min="1" class="form-control col" placeholder="Demanda" required>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-10">
          <input type="text" step="1" name='contato' min="1" class="form-control col" placeholder="Contato" required>
        </div>
        </div>
        <button type="submit" class="btn btn-success">Cadastrar</button>
      </form>
      <h3>Clientes cadastrados</h3>
      <table>
        <tbody>
          <tr>
            <td>Id</td>
            <td>Nome</td>
            <td>Demanda</td>
            <td>Contato</td>
          </tr>
          <% clientes.forEach(u => { %>
          <tr>
            <td><%= u.id %></td>
            <td><%= u.nome %></td>
            <td><%= u.demanda %></td>
            <td><%= u.contato %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    <% include ../partials/sidebar_bottom %>
  </body>
  <% include ../partials/bottom %>
</html>