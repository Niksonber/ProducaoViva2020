<!DOCTYPE html>
<html>
  <head>
    <title>Formul√°rio</title>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/sidebar_top %>

    <h3>Receber Lote visor</h3>
    <form method="POST" >
      <div class="form-group row">
        <div class="col-sm-10">
          <select name="ClienteId" class="custom-select" >
            <option selected="true" disabled>Cliente</option>
            <% clientes.forEach(m => { %>
              <option value="<%= m.id %>"><%= m.nome %></option>
            <% }); %>
          </select>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10">
          <select name="PacoteFinalId" class="custom-select">
            <option selected="true" disabled>Pacote</option>
            <% pacoteFinal.forEach(m => { %>
              <opton value="<%= m.id %>"><%= m.id %></opton>
            <% }); %>
          </select>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10">
          <select name="UsuarioId" class="custom-select">
            <option selected="true" disabled>Representante do LAB</option>
            <% usuarios.forEach(m => { %>
              <opton value="<%= m.id %>"><%= m.nome %></opton>
            <% }); %>
          </select>
        </div>
      </div>
      <div class="form-group row">
          <div class="col-sm-10">
            <input type="text" name='nomeRepresentanteCliente'  class="form-control col" placeholder="Nome do representante do cliente" required>
          </div>
      </div>
      <button type="submit" class="btn btn-success" >Cadastrar</button>
    </form>


    <% include ../partials/sidebar_bottom %>
  </body>
  <% include ../partials/bottom %>
</html>