<!DOCTYPE html>
<html>
  <head>
    <title>Formulário</title>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/sidebar_top %>

    <h3>Receber Lote visor</h3>
    <form method="POST" >
      <div class="form-group row">
        <div class="col-sm-10">
          <select name="ClienteId" class="custom-select" >
            <option selected="true" disabled>Cliente</option>
            <% clientes.forEach(m => { %>
              <option value="<%= m.id %>"><%= m.nome %></option>
            <% }); %>
          </select>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10">
          <select name="PacoteFinalId" class="custom-select" required>
            <option selected disabled>Pacote</option>
            <% pacoteFinal.forEach(p => { %>
              <option value="<%= p.id %>">PF<%= p.id %></option>
            <% }); %>
          </select>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10">
          <select class="custom-select" name="UsuarioId" required>
            <option selected disabled>Selecione o usuário LAB responsável</option>
            <% usuarios.forEach(u => { %>
              <option value="<%= u.id %>"><%= u.nome %></option>
            <% }); %>
          </select>
        </div>
      </div>
      <div class="form-group row">
          <div class="col-sm-10">
            <select class="custom-select" name="UsuarioExtId" required>
              <option selected disabled> Selecione o colaborador do cliente</option>
              <% usuariosExt.forEach( u=> { %>
                <option value="<%=u.id%>"><%= u.nome %></option>
              <% }) %>
            </select>
          </div>
      </div>
      <button type="submit" class="btn btn-success" >Cadastrar</button>
    </form>


    <% include ../partials/sidebar_bottom %>
  </body>
  <% include ../partials/bottom %>
</html>