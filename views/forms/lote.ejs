<!DOCTYPE html>
<html>
  <head>
    <title>Formulário</title>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/sidebar_top %>
      <h3>Cadastrar um lote de produção</h3>
      <form method="POST">
        <div class="input-group mb-3">
          <div class="input-group-prepend"><span class="input-group-text">Data de referência</span></div>
          <input class="form-control" type="date" name="data" value="<%= moment().format('YYYY-MM-DD'); %>" required></input>
        </div>
        <button class="btn btn-success mb-3" type="submit">Cadastrar</button>
      </form>
      <h3>Lotes de produção cadastrados</h3>
      <div class="table-responsive-md">
        <table class="table">
          <thead>
            <tr>
              <th>Cód.</th>
              <th>Data de referência</th>
            </tr>
          </thead>
          <tbody>
            <% lotes.forEach(l => { %>
            <tr>
              <td>LP<%= l.id %></td>
              <td><%= moment(l.data).format('DD/MM/YYYY') %></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% include ../partials/sidebar_bottom %>
  </body>
  <% include ../partials/bottom %>
</html>