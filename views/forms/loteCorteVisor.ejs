<!DOCTYPE html>
<html>
  <head>
    <title>Formulário</title>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/sidebar_top %>
    <!--  Lote de visores -->
    <h3>Receber Lote visor</h3>
    <form method="POST" >
        <div class="form-group row">
            <div class="col-sm-10">
              <select name="UsuarioVisorReceptorId" class="custom-select" >
                <option selected="true" disabled>Usuário</option>
                <% usuarios.forEach(m => { %>
                  <option value="<%= m.id %>"><%= m.nome %></option>
                <% }); %>
              </select>
            </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-10">
          <select name="TransacaoMateriaPrimaId" class="custom-select">
            <option selected="true" disabled>Transação Matéria Prima</option>
            <% transacaoMateriaPrima.forEach(m => { %>
              <opton value="<%= m.id %>"><%= m.id %></opton>
            <% }); %>
          </select>
          </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
            <input type="number" step="1" name='qtd_visores ' min="1" class="form-control col" placeholder="Quantidade de visores" required>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
            <input type="text" step="1" name='nomeEntregadorVisor ' min="1" class="form-control col" placeholder="Nome do entregador do Visor" required>
            </div>
        </div>
        <button type="submit" class="btn btn-success" >Cadastrar</button>
    </form>


  <% include ../partials/sidebar_bottom %>
  </body>
  <% include ../partials/bottom %>
</html>