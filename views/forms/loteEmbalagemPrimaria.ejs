<!DOCTYPE html>
<html>
  <head>
    <title>Formulário</title>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/sidebar_top %>

    <h3>Embalagem primária</h3>
    <form method="POST" class="container" action="/estoque/gerenciar/cadastrar" >
      <div class="form-group row">
        <div class="col-sm-10">
          <select name="LoteMontagemId" class="custom-select">
            <option selected="true" disabled>Lote de montagem</option>
            <% loteMontagem.forEach(m => { %>
              <option value="<%= m.id %>"><%= m.id %></option>
            <% }); %>            
          </select>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10">
          <select name="UsuarioId" class="custom-select">
            <option selected="true" disabled>Usuário</option>
            <% usuarios.forEach(m => { %>
              <option value="<%= m.id %>"><%= m.nome %></option>
            <% }); %>
          </select>
        </div>
      </div>
      <button type="submit" class="btn btn-success" >Cadastrar</button>
    </form>


  <% include ../partials/sidebar_bottom %>
  </body>
  <% include ../partials/bottom %>
</html>