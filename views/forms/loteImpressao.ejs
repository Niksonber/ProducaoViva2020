<!DOCTYPE html>
<html>
  <head>
    <title>Formulário</title>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/sidebar_top %>
   
    <h3>Lote de impressão</h3>
    <from method="POST">

      <div class="form-group row">
        <div class="col-sm-10">
          <select name="cod_impressora" class="custom-select" id="cod_impressora" >
            <option selected="true" disabled>Impressora</option>
            <% [...Array(5).keys()].forEach(m => { %>
              <option value="<%= m %>"><%= m %></option>
            <% }); %>
          </select>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-10">
          <input type="number" step="1" name='qtd_aprovadas' min="1" class="form-control col" placeholder="Quantidade de peças aprovadas" required>
        </div>
      </div>
      
      <div class="form-group row">
        <div class="col-sm-10">
          <input type="number" step="1" name='qtd_reprovadas' min="1" class="form-control col" placeholder="Quantidade de peças reprovadas" required>
        </div>
      </div>
      
      <div class="form-group row">
        <div class="col-sm-10">
          <select name="UsuarioId" class="custom-select" id="UsuarioId" >
            <option selected="true" disabled>Usuário</option>
            <% usuario.forEach(m => { %>
              <option value="<%= m.id %>"><%= m.nome %></option>
            <% }); %>
          </select>
        </div>
      </div>

      <button type="submit" class="btn btn-success">Cadastrar</button>
    </from>


    <% include ../partials/sidebar_bottom %>
  </body>
  <% include ../partials/bottom %>
</html>