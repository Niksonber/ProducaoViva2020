<!DOCTYPE html>
<html>
  <head>
    <title>Formulário</title>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/sidebar_top %>
      <h3>Cadastrar matéria-prima</h3>
      <form method="POST">
        <div class="form-group row">
          <div class="col-sm-10">
          <input type="text" name='nome'  class="form-control col" placeholder="Nome" required>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-10">
            <select name="tipo" class="custom-select" id="tipo">
              <option selected="true" disabled>Tipo da Material </option>
              <option value="Compra">Matéria prima</option>
              <option value="Doação">Ferramenta</option>
              <option value="Operação externa">Limpeza</option>
            </select>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-10">
          <input type="text" name='descricao' class="form-control col" placeholder="Descrição" required>
          </div>
        </div>
        <button type="submit" class="btn btn-success">Cadastrar</button>
      </form>
      <h3>Matérias-primas cadastrados</h3>
      <table>
        <tbody>
          <tr>
            <td>Id</td>
            <td>Nome</td>
            <td>Tipo</td>
            <td>Descrição</td>
            <td>Quantidade disponível</td>
          </tr>
          <% materiasprimas.forEach(u => { %>
          <tr>
            <td><%= u.id %></td>
            <td><%= u.nome %></td>
            <td><%= u.tipo %></td>
            <td><%= u.descricao %></td>
            <td><%= u.qtd_atual %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    <% include ../partials/sidebar_bottom %>
  </body>
  <% include ../partials/bottom %>
</html>