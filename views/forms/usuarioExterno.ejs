<!DOCTYPE html>
<html>
  <head>
    <title>Formulário</title>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/sidebar_top %>
      <h3>Cadastrar usuário externo</h3>
      <form method="POST">
        <input class="form-control mb-3" type="text" name="nome" placeholder="Nome" required></input>
        <input class="form-control mb-3" type="text" name="email" placeholder="E-mail"></input>
        <input class="form-control mb-3" type="text" name="telefone" placeholder="Telefone"></input>
        <select class="custom-select mb-3" name="EntidadeExternaId" required>
          <option selected disabled>Selecione a entidade externa</option>
          <% entidadesExternas.forEach(e => { %>
            <option value="<%= e.id %>"><%= e.nome %></option>
          <% }); %>
          <option value="Compra">Compra</option>
        </select>
        <button class="btn btn-success mb-3" type="submit">Cadastrar</button>
      </form>
      <h3>Usuários externos cadastrados</h3>
      <div class="table-responsive-md">
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Id</th>
              <th>Nome</th>
              <th>Entidade externa</th>
              <th class="notImportant">E-mail</th>
              <th class="notImportant">Telefone</th>
            </tr>
          </thead>
          <tbody>
            <% usuarios.forEach(u => { %>
            <tr>
              <td><a href=""><img src="/images/trash.png" width="16"/></a></td>
              <td><%= u.id %></td>
              <td><input class="pretendText" type="text" table-id="<%= u.id %>" name="nome" value="<%= u.nome %>"></input></td>
              <td>
                <select class="pretendText" table-id="<%= u.id %>" name="EntidadeExternaId">
                  <% entidadesExternas.forEach(e => { %>
                    <option value="<%= e.id %>" <%= (u.EntidadeExternaId == e.id) ? "selected" : ""; %>><%= e.nome %></option>
                  <% }); %>
                </select>
              </td>
              <td class="notImportant"><input class="pretendText" type="text" table-id="<%= u.id %>" name="email" value="<%= u.email %>"></input></td>
              <td class="notImportant"><input class="pretendText" type="text" table-id="<%= u.id %>" name="telefone" value="<%= u.telefone %>"></input></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% include ../partials/sidebar_bottom %>
  </body>
  <% include ../partials/bottom %>
</html>